                <MenuItem Header="SubMenu2"/>
            </MenuItem>
        </Menu>
        <StatusBar Margin="15,440,4,6" Grid.ColumnSpan="3">
            <ProgressBar Height="25" Width="175"/>
        </StatusBar>
        <ToolBar x:Name="toolBar" Margin="0,85,-6,0" VerticalAlignment="Top" Grid.ColumnSpan="3" Height="55">
            <Button Height="50" Width="50">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF6DC9D3" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button Height="50" Width="50">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF6DC9D3" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button Height="50" Width="50">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF6DC9D3" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button Height="50" Width="50">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF6DC9D3" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <ComboBox Margin="0,15" Width="134">
                <ComboBoxItem Content="A"/>
                <ComboBoxItem Content="B"/>
                <ComboBoxItem Content="C"/>
            </ComboBox>
        </ToolBar>
        <RadioButton x:Name="radioButton_Copy2" Content="RadioButton" Margin="47,424,136,0" VerticalAlignment="Top" Height="16" Grid.ColumnSpan="2"/>
        <ToolBarTray Margin="0,0,29,426" Grid.ColumnSpan="3">
            <ToolBar>
                <Button>
                    <Image Source="open-sign.png" MaxHeight="32"></Image>
                </Button>
                <Separator></Separator>
                <Button>New</Button>
                <Button>Open</Button>
                <Button>Close</Button>
                <Separator></Separator>
                <CheckBox FontWeight="Bold">Bold</CheckBox>
                <CheckBox FontStyle="Italic">Italic</CheckBox>
                <CheckBox>
                    <TextBlock TextDecorations="Underline">Underline</TextBlock>
                </CheckBox>
                <Separator></Separator>
                <ComboBox SelectedIndex="1">
                    <ComboBoxItem>50%</ComboBoxItem>
                    <ComboBoxItem>100%</ComboBoxItem>
                    <ComboBoxItem>150%</ComboBoxItem>
                </ComboBox>
            </ToolBar>
            <ToolBar>
                <Button>A</Button>
                <Button>B</Button>
                <Button>C</Button>
            </ToolBar>
            <ToolBar Band="1">
                <Button>Red</Button>
                <Button>Green</Button>
                <Button>Yellow</Button>
                <Button>White</Button>
            </ToolBar>
        </ToolBarTray>
        <Viewbox Grid.Column="1" HorizontalAlignment="Left" Height="265" Margin="328,145,0,0" VerticalAlignment="Top" Width="245" Grid.ColumnSpan="2">
            <Rectangle Fill="#FFF4F4F5" Height="65" Stroke="#FF914444" Width="41" RadiusY="19.398" RadiusX="19.398" RenderTransformOrigin="0.778,0.56" Stretch="None" ScrollViewer.HorizontalScrollBarVisibility="Auto">
                <Rectangle.OpacityMask>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.OpacityMask>
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="0.803"/>
                        <RotateTransform/>
                        <TranslateTransform Y="0.401"/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>
        </Viewbox>
    </Grid>
</Window>
