                    <Grid.RowDefinitions>
                        <RowDefinition Height="39*"/>
                        <RowDefinition Height="75*"/>
                        <RowDefinition Height="35*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="11*"/>
                        <ColumnDefinition Width="16*"/>
                        <ColumnDefinition Width="45"/>
                    </Grid.ColumnDefinitions>
                    <Grid.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="0"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                    <RadioButton x:Name="radioButton_Copy3" Content="RadioButton" Margin="19,14,-1,0" VerticalAlignment="Top" Height="16" Grid.ColumnSpan="3" Grid.Row="1"/>
                </Grid>
                <RadioButton x:Name="radioButton_Copy" Content="RadioButton" Margin="24,17,28,0" VerticalAlignment="Top" Height="16" Grid.Row="2"/>
                <RadioButton x:Name="radioButton_Copy1" Content="RadioButton" Margin="19,48,33,0" VerticalAlignment="Top" Height="16" Grid.Row="1"/>
            </Grid>
        </GroupBox>
        <Menu x:Name="menu" Height="20" Margin="5,60,-6,0" VerticalAlignment="Top" Grid.ColumnSpan="3">
            <MenuItem Height="20" Width="70" Header="Menu" Background="{x:Null}">
                <MenuItem Header="SubMenu1"/>
