        xmlns:local="clr-namespace:testLesson08_01"
        mc:Ignorable="d"
        Title="MainWindow" Height="537" Width="862">
    <Grid Margin="3,1,7,0" RenderTransformOrigin="-0.3,-0.25" Height="481" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="22*"/>
            <ColumnDefinition Width="18*"/>
        </Grid.ColumnDefinitions>
        <GroupBox x:Name="groupBox" Header="GroupBox" HorizontalAlignment="Left" Margin="45,135,0,0" VerticalAlignment="Top" Height="280" Width="450" Grid.ColumnSpan="3">
            <Grid Margin="10,5,13,8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="44*"/>
                    <RowDefinition Height="45*"/>
                    <RowDefinition Height="46*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="214*"/>
                    <ColumnDefinition Width="201*"/>
                </Grid.ColumnDefinitions>
                <RadioButton x:Name="radioButton" Content="RadioButton" Margin="19,53,33,0" VerticalAlignment="Top" Height="16"/>
                <RadioButton x:Name="radioButton1" Content="RadioButton" HorizontalAlignment="Left" Margin="19,14,0,0" VerticalAlignment="Top" Grid.Row="1" Height="16" Width="82"/>
                <Button x:Name="button" Content="Button" Grid.Column="1" HorizontalAlignment="Left" Margin="20,24,0,0" VerticalAlignment="Top" Width="75" Height="22"/>
